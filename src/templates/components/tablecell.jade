mixin tablecell(options)
	//- Set default values
	- options             = options          || {};
	- options['title']    = options.title    || '';
	- options['cause']    = options.cause    || '';
	- options['severity'] = options.severity || '';
	- options['long']     = options.long     || {};
	- options['lat']      = options.lat      || {};
	- options['dataID']   = options.dataID   || 0;
	- options['classes'] = options.classes || '';

	.tableCell.typo.serviceTableContent.lineHeight120(data-id=options.dataID, class=options.classes)
		.severityMarker(class=options.severity)
		h3.typo.serviceTableHeader #{options.title}
		p.timestamp #{options.timestamp}
		p.cause #{options.cause}
		p.long Long: #{options.long}
		p.lat Lat: #{options.lat}

mixin navigation-tablecell(options)
	//- Set default values
	- options['title']   = options.title   || '';
	- options['icon']    = options.icon    || '';
	- options['type']    = options.type    || '';
	- options['classes'] = options.classes || '';
	- options['counter']   = options.counter || false;
	- options['quick']   = options.quick || false;
	- options['alarmresult'] = options.alarmresult || [];
	- options['selected'] = options.selection || '';

	.navigationTableCell(class="#{options.classes != '' ? options.classes : options.icon} #{options.selected == options.type ? 'selected' : ''}", data-type="#{options.type}")
		.sidebarMarker(data-type="#{options.type}")
			+icon({type: options.icon})
			span.title #{options.title}

			if options.counter
				.ion-badge-container
					span.ion-badge.critical 4
					span.ion-badge.information 2
					span.ion-badge.minor 3
					span.ion-badge.warning 1

		if options.quick
			.ion-badge-container
				+button({icon:'minus'})
					+icon({type: 'sidebarAddonClose'})

		if options.quick
			.quickFinder
				dl.quickAccess
					dt Quick Access
					dd Overview
					dd Services
					dd Devices

				dl.quickFavorites
					dt
						+icon({type: 'favStar'})
						| Favorites
					dd
						div.box
							span Rack 1
							+icon({type: 'favRemove'})
					dd
						div.box
							span DSMR-Rack 1
							+icon({type: 'favRemove'})
					dd
						div.box
							span ZCMB-Rack 1
							+icon({type: 'favRemove'})

mixin device-tablecell(options)
