mixin commissioningFile-tablecell(options)
	//- Set default values
	- options = options || {};
	- options['title'] = options.title || '';
	- options['racks'] = options.racks || '';
	- options['devices'] = options.devices || '';
	- options['info'] = options.info || '';

	//- .tableCell(class="#{options.classes} #{options.selected == options.type ? 'selected' : ''}", data-type="#{options.type}")
	.tableCell.systemProfile
		div.iconBox
			+icon({type: 'file'})
		div.infoBox
			h2 #{options.title}
			h3 #{options.racks} Racks, #{options.devices} Devices
			p #{options.info}
			+icon({type: 'systemFileStar'})
		div.buttonBox
			+button({classes: 'systemProfileActive', id:''})
				span Active
				+icon({type: 'commissioningSkip'})
			+button({classes: 'systemProfileActivate', id:''})
				span Activate