mixin table-view(options)
    - options                       = options                    || {};
    - options['classes']            = options.classes            || '';
    - options['hidden']             = options.hidden             ?  'hidden'             : '';
    - options['hasTableViewHeaderExpanded'] = options.hasTableViewHeaderExpanded ?  'hasTableViewHeaderExpanded' : '';
    ul.table-view(class='#{options.classes} #{options.hasTableViewHeaderExpanded} #{options.hidden}')
        block

mixin table-view-header(options)
    //- Set default values
    - options             = options          || {};
    - options['classes']  = options.classes  || '';
    .table-view-header(class='#{options.classes} isExpanded')
        block

